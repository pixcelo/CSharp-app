@model IEnumerable<WebAppMVC.Models.Blog>

<script type="text/javascript">    
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this blog?")) {
            window.location.href = '/Blog/Delete/' + id;
        }
    }
</script>

<h2>Blog Posts</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">New Blog Post</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Id</td>
                <td>@blog.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-secondary">Edit</a>

                    <form asp-action="Delete" asp-route-id="@blog.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this blog?');" style="display:inline;">
                        <input type="hidden" name="id" value="@blog.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
