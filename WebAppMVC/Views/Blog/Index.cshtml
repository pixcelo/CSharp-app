@model IEnumerable<WebAppMVC.Models.Blog>

<h2>Blog Posts</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">New Blog Post</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Id</td>
                <td>@blog.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
